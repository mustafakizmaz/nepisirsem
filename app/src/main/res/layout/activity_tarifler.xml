<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="5dp"
    android:background="@drawable/arka4"
    >
    <TextView
        android:text="nasıl yapıldığını izle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/res"
        android:layout_alignParentEnd="true"
        android:id="@+id/link"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="tarifler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tarifler"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:textStyle="normal|italic"
        android:textColor="?attr/colorButtonNormal" />

    <TextView
        android:text="bittiğinde böyle görünecek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>